<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="connectionMaker" class="study.tobi.spring3.chapter1.user.dao.HConnectionMaker" />

    <bean id="userDao" class="study.tobi.spring3.chapter1.user.dao.UserDao">
        <property name="connectionMaker" ref="connectionMaker" />
    </bean>

    <bean id="accountDao" class="study.tobi.spring3.chapter1.user.dao.AccountDao">
        <property name="connectionMaker" ref="connectionMaker" />
    </bean>

    <bean id="messageDao" class="study.tobi.spring3.chapter1.user.dao.MessageDao">
        <property name="connectionMaker" ref="connectionMaker" />
    </bean>

</beans>